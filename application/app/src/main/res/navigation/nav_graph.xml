<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home_fragment">

    <fragment
        android:id="@+id/nav_debug_fragment"
        android:name="com.application.keykeeper.DebugFragment"
        android:label="@string/nav_debug"
        tools:layout="@layout/fragment_debug" />
    <fragment
        android:id="@+id/nav_account_fragment"
        android:name="com.application.keykeeper.AccountFragment"
        android:label="@string/nav_account"
        tools:layout="@layout/fragment_account"/>

    <fragment
        android:id="@+id/nav_home_fragment"
        android:name="com.application.keykeeper.HomeFragment"
        android:label="@string/nav_home"
        tools:layout="@layout/fragment_home">
    </fragment>

    <fragment
        android:id="@+id/nav_settings_fragment"
        android:name="com.application.keykeeper.settingsFragment"
        android:label="@string/nav_settings"
        tools:layout="@layout/fragment_settings">
    </fragment>

    <fragment
        android:id="@+id/nav_storage_fragment"
        android:name="com.application.keykeeper.StorageFragment"
        android:label="@string/nav_storage"
        tools:layout="@layout/fragment_storage">

        <action
            android:id="@+id/action_nav_storage_fragment_to_nav_storage_open_item"
            app:destination="@id/nav_storage_open_item" />
    </fragment>

    <fragment
        android:id="@+id/nav_storage_open_item"
        android:name="com.application.keykeeper.StorageItemFragment"
        android:label="Storage Item"
        tools:layout="@layout/fragment_storage_item">
        <action
            android:id="@+id/action_nav_storage_open_item_to_nav_storage_fragment"
            app:destination="@id/nav_storage_fragment" />
        <argument
            android:name="credentials"
            app:argType="structure.CredentialsItem" />
    </fragment>
</navigation>