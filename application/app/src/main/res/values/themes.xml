<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KeyKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg_dark</item>
        <item name="colorSecondaryVariant">@color/bg_dark_transparent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white_transparent</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cu_white_cursor</item>
        <item name="checkboxStyle">@style/Theme.KeyKeeper.CheckBox</item>
    </style>

    <style name="Theme.KeyKeeper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KeyKeeper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.KeyKeeper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.KeyKeeper.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/co_nav_bar</item>
        <item name="itemTextColor">@drawable/co_nav_bar</item>
    </style>

    <style name="Theme.KeyKeeper.NavigationBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.KeyKeeper.StorageItem">
        <item name="android:background">@drawable/bg_shadow</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Theme.KeyKeeper.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>